<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/reloadWeChat"
        layout="@layout/common_reload"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <!--    android:background="#E603A9F4"-->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabWeChat"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:tabIndicatorColor="@color/google_yellow"
        app:tabIndicatorHeight="3dp"
        app:tabIndicatorFullWidth="false"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/colorAccent"
        app:tabTextAppearance="@style/TabLayout.TabText"
        app:tabTextColor="@color/colorText"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vpWeChat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

    </androidx.viewpager.widget.ViewPager>


</LinearLayout>